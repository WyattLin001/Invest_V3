# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# APNs Configuration
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apple-team-id
APNS_PRIVATE_KEY=base64-encoded-private-key
APNS_BUNDLE_ID=com.yourcompany.invest-v3
APNS_ENVIRONMENT=sandbox

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres

# Optional: Additional notification providers
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-fcm-project-id

# Email Configuration (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
MAX_NOTIFICATIONS_PER_HOUR=100
MAX_BULK_RECIPIENTS=10000

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn